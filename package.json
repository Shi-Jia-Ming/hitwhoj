{
  "private": true,
  "name": "hitwhoj",
  "scripts": {
    "build": "run-s build:*",
    "build:sass": "sass --no-source-map styles:app/styles",
    "build:remix": "remix build",
    "build:fonts": "mkdirp public/build/_assets/fonts/ && copyfiles -f node_modules/katex/dist/fonts/* public/build/_assets/fonts/",
    "build:ws": "yarn tsc ./server/ws.server.ts",
    "dev": "yarn build && run-p dev:*",
    "dev:sass": "sass --no-source-map --watch styles:app/styles",
    "dev:node": "cross-env NODE_ENV=development nodemon -r dotenv/config ./server/server.js --watch ./server/server.js ./server/ws.server.ts",
    "dev:remix": "remix watch",
    "clean": "rimraf public/build build app/styles .cache",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "lint": "eslint --ext ts,tsx app -f pretty --fix",
    "lint:check": "eslint --ext ts,tsx app -f pretty",
    "postinstall": "patch-package && prisma generate",
    "start": "cross-env NODE_ENV=production node ./server.js"
  },
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "gitHooks": {
    "pre-commit": "yarn && yarn fmt:check && yarn lint:check && yarn tsc"
  },
  "dependencies": {
    "@arco-design/web-react": "^2.30.2",
    "@prisma/client": "^3.14.0",
    "@remix-run/express": "^1.4.3",
    "@remix-run/node": "^1.4.3",
    "@remix-run/react": "^1.4.3",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "hast-to-hyperscript": "^10.0.1",
    "katex": "^0.15.3",
    "lowlight": "^2.6.1",
    "minio": "^7.0.26",
    "morgan": "^1.10.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^8.0.1",
    "rehype-highlight": "^5.0.2",
    "rehype-katex": "^6.0.2",
    "rehype-raw": "^6.1.1",
    "rehype-sanitize": "^5.0.1",
    "remark-gemoji": "^7.0.1",
    "remark-gfm": "^3.0.1",
    "remark-math": "^5.1.1",
    "socket.io": "^4.4.1",
    "socket.io-client": "^4.5.1",
    "zod": "^3.13.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.4.3",
    "@remix-run/eslint-config": "^1.4.3",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/minio": "^7.0.12",
    "@types/morgan": "^1.9.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^7.0.0",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.14.21",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.12.0",
    "eslint-formatter-pretty": "^4.1.0",
    "mkdirp": "^1.0.4",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.4.7",
    "prettier": "^2.6.0",
    "prettier-plugin-prisma": "^3.11.0",
    "prisma": "^3.14.0",
    "rimraf": "^3.0.2",
    "sass": "^1.49.7",
    "typescript": "^4.1.2",
    "yorkie": "^2.0.0"
  },
  "resolutions": {
    "katex": "^0.15.3"
  },
  "engines": {
    "node": "=16"
  },
  "sideEffects": false
}
