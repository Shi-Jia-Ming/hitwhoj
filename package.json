{
  "private": true,
  "name": "hitwhoj",
  "scripts": {
    "build": "sass --no-source-map styles:app/styles && remix build && yarn install:fonts",
    "clean": "rimraf public/build server/build app/styles .cache",
    "dev": "yarn install:fonts && concurrently -n \"REMIX,SASS,NODE\" \"remix watch\" \"sass --no-source-map --watch styles:app/styles\" \"yarn start:dev\"",
    "fmt": "prettier --write .",
    "postinstall": "remix setup node && prisma generate",
    "start": "cross-env NODE_ENV=production node --require esbuild-register server/index.ts",
    "start:dev": "cross-env NODE_ENV=development node --require esbuild-register server/index.ts",
    "install:fonts": "mkdirp public/build/_assets/fonts/ && copyfiles -f node_modules/katex/dist/fonts/* public/build/_assets/fonts/"
  },
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "gitHooks": {
    "pre-commit": "yarn && yarn fmt && yarn tsc && git diff --exit-code > /dev/null"
  },
  "dependencies": {
    "@arco-design/web-react": "^2.30.2",
    "@prisma/client": "^3.11.0",
    "@remix-run/express": "^1.3.3",
    "@remix-run/react": "^1.3.3",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "katex": "^0.15.3",
    "minio": "^7.0.26",
    "morgan": "^1.10.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^8.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "rehype-katex": "^6.0.2",
    "remark-math": "^5.1.1",
    "remix": "^1.3.3",
    "socket.io": "^4.4.1",
    "zod": "^3.13.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.3.3",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/minio": "^7.0.12",
    "@types/morgan": "^1.9.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/react-syntax-highlighter": "^13.5.2",
    "concurrently": "^7.0.0",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.14.21",
    "esbuild-register": "^3.3.2",
    "mkdirp": "^1.0.4",
    "prettier": "^2.6.0",
    "prettier-plugin-prisma": "^3.11.0",
    "prisma": "^3.11.0",
    "rimraf": "^3.0.2",
    "sass": "^1.49.7",
    "typescript": "^4.1.2",
    "yorkie": "^2.0.0"
  },
  "resolutions": {
    "katex": "^0.15.3"
  },
  "engines": {
    "node": "=16"
  },
  "sideEffects": false
}
