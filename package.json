{
  "private": true,
  "name": "hitwhoj",
  "version": "v0.0.1-alpha",
  "scripts": {
    "build": "run-s build:*",
    "build:sass": "sass --no-source-map styles:app/styles",
    "build:remix": "remix build",
    "build:fonts": "shx mkdir -p public/build/_assets && shx cp -r node_modules/katex/dist/fonts node_modules/monaco-editor/min/vs public/build/_assets",
    "dev": "yarn build && run-p dev:*",
    "dev:sass": "sass --no-source-map --watch styles:app/styles",
    "dev:node": "cross-env NODE_ENV=development node -r esbuild-register ./server/server.ts",
    "dev:remix": "remix watch",
    "clean": "shx rm -rf public/build build app/styles .cache",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "lint": "eslint --ext ts,tsx app -f pretty --fix",
    "lint:check": "eslint --ext ts,tsx app -f pretty",
    "postinstall": "patch-package && prisma generate",
    "start": "cross-env NODE_ENV=production node -r esbuild-register ./server/server.ts",
    "test": "cross-env NODE_ENV=test ./test.sh"
  },
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "gitHooks": {
    "pre-commit": "yarn && yarn fmt:check && yarn lint:check && yarn tsc"
  },
  "dependencies": {
    "@arco-design/web-react": "^2.33.1",
    "@monaco-editor/react": "^4.4.5",
    "@prisma/client": "^4.0.0",
    "@remix-run/express": "^1.6.0",
    "@remix-run/node": "^1.6.0",
    "@remix-run/react": "^1.6.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "hash.js": "^1.1.7",
    "hast-to-hyperscript": "^10.0.1",
    "katex": "^0.15.3",
    "lowlight": "^2.6.1",
    "minio": "^7.0.26",
    "monaco-editor": "^0.33.0",
    "morgan": "^1.10.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^8.0.1",
    "rehype-highlight": "^5.0.2",
    "rehype-katex": "^6.0.2",
    "rehype-raw": "^6.1.1",
    "rehype-sanitize": "^5.0.1",
    "remark-gemoji": "^7.0.1",
    "remark-gfm": "^3.0.1",
    "remark-math": "^5.1.1",
    "rxjs": "^7.5.5",
    "socket.io": "^4.5.1",
    "ws": "^8.6.0",
    "zod": "^3.13.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.0",
    "@remix-run/eslint-config": "^1.6.0",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/minio": "^7.0.12",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.6.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/ws": "^8.5.3",
    "concurrently": "^7.0.0",
    "esbuild": "^0.14.21",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.12.0",
    "eslint-formatter-pretty": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.4.7",
    "prettier": "^2.6.0",
    "prettier-plugin-prisma": "^3.11.0",
    "prisma": "^4.0.0",
    "sass": "^1.49.7",
    "shx": "^0.3.4",
    "typescript": "^4.1.2",
    "yorkie": "^2.0.0"
  },
  "resolutions": {
    "katex": "^0.15.3",
    "minimist": "^1.2.6",
    "got": "^11.8.5"
  },
  "engines": {
    "node": ">=18"
  },
  "sideEffects": false
}
